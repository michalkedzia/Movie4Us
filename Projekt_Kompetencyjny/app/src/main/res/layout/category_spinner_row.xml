<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#d9e7ff">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#d9e7ff"
            android:id="@+id/image_view_icon"
            android:src="@drawable/two_across_swords"
    />
    <TextView
            android:id="@+id/text_view_name"
            android:background="#d9e7ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_view_icon"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image_view_icon"
            android:text="War"
            android:textSize="25dp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_margin="10dp"
            app:fontFamily="serif" android:layout_marginTop="16dp" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"/>

</RelativeLayout>