<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <include layout="@layout/application_toolbar" tools:layout_editor_absoluteY="77dp"
             tools:layout_editor_absoluteX="0dp" android:id="@+id/include"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="410dp"
            android:layout_height="130dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include" android:id="@+id/constraintLayout">

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/textInputUsernameToConnect">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type user to connect" android:id="@+id/usernameToConnect"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
                android:text="Connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/buttonConnect"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <Spinner
                android:id="@+id/spinnerCategories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/categoriesList"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputUsernameToConnect" android:layout_marginTop="10dp"/>
        <Button
                android:text="Button"
                android:layout_width="108dp"
                android:layout_height="51dp" android:id="@+id/buttonCategories"
                android:layout_marginLeft="124dp" android:layout_marginStart="124dp"
                app:layout_constraintStart_toEndOf="@+id/spinnerCategories" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonConnect"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            android:id="@+id/textInputGenres" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="1dp" android:layout_marginStart="1dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="hint" android:id="@+id/genre"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonGenre"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputGenres" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="130dp" android:layout_marginStart="130dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>